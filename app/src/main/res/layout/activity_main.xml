<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Ingrese sus datos"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtNombremain1"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:fontFamily="@font/fresca"
        android:inputType="textPersonName" />

    <RadioGroup
        android:id="@+id/gruporadio"
        android:layout_width="347dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="35dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdMas"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fresca"
            android:text="Masculino"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdFem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/fresca"
            android:text="Femenino"
            android:textSize="18sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/txtFechamain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/btnFecha"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/fresca"
        android:inputType="date" />

    <EditText
        android:id="@+id/txtTelefonomain1"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:fontFamily="@font/fresca"
        android:inputType="number"
        android:maxLength="10" />

    <Button
        android:id="@+id/btnFecha"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:layout_below="@+id/gruporadio"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/calendar_10_512"
        android:onClick="btnFecha" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTelefonomain1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="EnviarDatos"
        android:text="Enviar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/fresca"
        android:text="Nombre:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombremain1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/fresca"
        android:text="Género:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFechamain1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/fresca"
        android:text="Télefono:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gruporadio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/fresca"
        android:text="Fecha Nacimiento:"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>